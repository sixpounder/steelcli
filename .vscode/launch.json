    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'steelseries-cli'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=steelseries-cli",
                    "--package=steelseries-cli"
                ],
                "filter": {
                    "name": "steelseries-cli",
                    "kind": "bin"
                }
            },
            "args": [
                "--escalate",
                "-v",
                "change",
                "-d",
                "1038:12aa",
                "lhc",
                "'255.0.0'"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'steelseries-cli'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=steelseries-cli",
                    "--package=steelseries-cli"
                ],
                "filter": {
                    "name": "steelseries-cli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}